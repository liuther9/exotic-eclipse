---
import { Icon } from 'astro-icon'
import Feature from "../components/Feature.astro";
import Testimonial from "../components/Testimonial.astro";
import Layout from "../layouts/Layout.astro";

---

<Layout title="Welcome to Hezafren Industry.">
	<main>
		<section class="hero bg-gradient-to-r from-sky-500 to-indigo-500 text-white">
			<div class="mx-auto flex flex-col items-center pb-12">
				<img
					src="/hero.png"
					alt="Global map with connecting dots and arrows"
					class="w-full h-64 rounded-lg mb-8 object-cover"
				/>
				<h1 class="text-4xl font-bold mb-4">Unlock Global Growth</h1>
				<p class="text-xl leading-relaxed mb-8">
					Supercharge your brand's expansion with data-driven strategies and expert support.
				</p>
				<div class="flex items-center justify-center gap-8">
					<a href="/guide" class="flex btn items-center btn-primary mr-4">
						<Icon pack="mdi" name="book" class="w-8 h-8 mr-2" />
						Get Your Free Guide
					</a>
					<a href="/guide" class="flex btn items-center btn-primary mr-4">
						<Icon pack="mdi" name="call" class="w-8 h-8 mr-2" />
						Schedule a Consultation
					</a>
				</div>
			</div>
		</section>
		<section class="features bg-white py-16">
			<div class="container mx-auto px-4">
				<h2 class="text-2xl font-bold text-center mb-8">Key Features</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					<Feature
						icon="social-media"
						title="Social Media Management"
						description="Amplify your brand voice and engage your audience across the globe."
					/>
					<Feature
						icon="website"
						title="Website & Catalog Development"
						description="Create a multilingual and culturally relevant online presence."
					/>
					<Feature
						icon="brandbook"
						title="Brandbook & Business Card Creation"
						description="Develop a cohesive brand identity that resonates globally."
					/>
					<Feature
						icon="logo"
						title="Logo Design"
						description="Craft a unique and memorable logo that stands out in international markets."
					/>
					<Feature
						icon="trade-show"
						title="Trade Show Organization"
						description="Showcase your brand at key international trade shows for maximum exposure."
					/>
					<Feature
						icon="market-expansion"
						title="Market Expansion"
						description="Develop a strategic expansion plan and enter new markets with success."
					/>
					<Feature
						icon="foreign-market"
						title="Foreign Market Registration Support"
						description="Navigate the legal complexities of entering new markets with expert guidance."
					/>
					<Feature
						icon="seo"
						title="SEO & Target"
						description="Reach your target audience globally with effective SEO and targeting strategies."
					/>
					<Feature
						icon="chatbot"
						title="Chatbot & Phone System Integration"
						description="Provide 24/7 customer support in multiple languages."
					/>
					<Feature
						icon="analytics"
						title="Web Analytics & Reporting"
						description="Track your global performance and make data-driven decisions."
					/>
				</div>
			</div>
		</section>
		<section class="client-success bg-gray-100 py-16">
			<div class="container mx-auto px-4">
				<h2 class="text-2xl font-bold text-center mb-8">Trusted by Leading Brands</h2>
				<ul class="flex flex-wrap justify-center items-center gap-8 mb-8">
					<li>
						<img src="/images/client-logo1.png" alt="Client Logo 1" class="w-24 h-24 rounded-full mb-4 overflow-hidden bg-black" />
					</li>
					<li>
						<img src="/images/client-logo2.png" alt="Client Logo 2" class="w-24 h-24 rounded-full mb-4 overflow-hidden bg-black" />
					</li>
					<li>
						<img src="/images/client-logo3.png" alt="Client Logo 3" class="w-24 h-24 rounded-full mb-4 overflow-hidden bg-black" />
					</li>
				</ul>
		
				<h2 class="text-2xl font-bold text-center mb-8">What Our Clients Say</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					<Testimonial
						name="John Doe"
						company="Company Name"
						quote="Since working with Hezarfen Industry, we've seen a 200% increase in our global website traffic and a 30% increase in sales from international customers. Their services have been invaluable in helping us achieve our expansion goals."
					/>
					<Testimonial
						name="Jane Smith"
						company="Another Company"
						quote="The team at Hezarfen Industry is incredibly knowledgeable and experienced in international branding and expansion. They were able to guide us through the entire process, from market research to legal compliance. We highly recommend their services to any company looking to expand their global reach."
					/>
					<Testimonial
						name="John Doe"
						company="Company Name"
						quote="Since working with Hezarfen Industry, we've seen a 200% increase in our global website traffic and a 30% increase in sales from international customers. Their services have been invaluable in helping us achieve our expansion goals."
					/>
					<Testimonial
						name="Jane Smith"
						company="Another Company"
						quote="The team at Hezarfen Industry is incredibly knowledgeable and experienced in international branding and expansion. They were able to guide us through the entire process, from market research to legal compliance. We highly recommend their services to any company looking to expand their global reach."
					/>
				</div>
			</div>
		</section>

		<section class="call-to-action bg-sky-500 text-white py-24">
			<div class="container mx-auto px-4 lg:flex lg:items-center lg:justify-between">
				<div class="lg:w-2/3">
					<h2 class="text-3xl font-bold mb-4">Ready to Take Your Business Global?</h2>
					<p class="text-lg leading-relaxed mb-8">Schedule a free consultation to discuss your personalized expansion strategy and unlock new growth opportunities.</p>
				</div>
				<div class="lg:w-1/3">
					<a href="/contact" class="btn btn-primary rounded-full px-6 py-3">Schedule Your Consultation Today</a>
				</div>
			</div>
		</section>
	</main>
</Layout>