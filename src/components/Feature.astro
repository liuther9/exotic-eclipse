---
interface Props {
	title: string;
	icon: string;
	description: string;
}
const { title, description } = Astro.props;
---
<div class="animate feature rounded-3xl shadow-lg px-8 py-6 bg-gradient-to-r from-sky-500 to-indigo-500 hover:shadow-2xl">
  <i class="fas fa-{ icon } fa-5x mb-4 text-white animate-spin-slow hover:animate-none"></i>
  <h3 class="text-xl font-bold mb-2 text-white">{ title }</h3>
  <p class="text-base text-white leading-relaxed mb-8">{ description }</p>
  <a href="/features/{ title | slugify }" class="btn btn-primary rounded-full pr-4 py-2 text-sky-50 underline">Learn More</a>
</div>

<style>
  .animate {
    animation: leftToRight 0.5s ease-in-out;
  }

  @keyframes leftToRight {
    from {
      opacity: 0;
      transform: translateX(-20px);
    } to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>