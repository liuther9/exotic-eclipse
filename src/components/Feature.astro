---
interface Props {
	title: string;
	icon: string;
	description: string;
}
const { title, description } = Astro.props;
---

<div class="feature rounded-lg shadow-lg px-8 py-4">
  <i class="fas fa-{{ icon }} fa-4x mb-4 text-primary"></i>
  <h3 class="text-xl font-bold mb-2">{{ title }}</h3>
  <p class="text-base">{{ description }}</p>
</div>