---
interface Props {
	quote: string;
	name: string;
	company: string;
}
const { quote, name, company } = Astro.props;
---
<div class="testimonial rounded-lg shadow-lg px-8 py-4">
  <p class="text-lg leading-relaxed mb-4">
    {{ quote }}
  </p>
  <div class="flex items-center mb-2">
    <img src="/images/avatar.png" alt="Testimonial avatar" class="w-12 h-12 rounded-full mr-4" />
    <div>
      <h4 class="text-lg font-bold">{{ name }}</h4>
      <p class="text-sm text-gray-600">{{ company }}</p>
    </div>
  </div>
</div>